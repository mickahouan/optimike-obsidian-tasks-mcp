{
  "mcpServers": {
    "optimike-obsidian-tasks-mcp-stdio": {
      "command": "npx",
      "args": ["optimike-obsidian-tasks-mcp", "/path/to/obsidian/vault"]
    },
    "optimike-obsidian-tasks-mcp-http": {
      "command": "npx",
      "args": ["optimike-obsidian-tasks-mcp", "/path/to/obsidian/vault"],
      "env": {
        "MCP_TRANSPORT_TYPE": "http",
        "MCP_HTTP_HOST": "127.0.0.1",
        "MCP_HTTP_PORT": "3011"
      }
    }
  }
}
